			<OrderAttackSelf>
				(block Nil
					(objCommunicate gSource gSender 14)
					(objSendMessage gSender gSource "1M self-destruct activated")
					(sysAddObjTimerEvent 90 gSource "OrderSelfDestruct")
					)
			</OrderAttackSelf>
			
			<OrderSelfDestruct>
				(block Nil
					(sysCreateWeaponFire 
						&vtBlastExplosion4; 
						(list Nil 'explosion Nil "self-destructing 1M battle auton" 0x00)
						(objGetPos gSource) 
						0
						0
						Nil
						'detonateNow
						)

					(objDestroy gSource)
					)
			</OrderSelfDestruct>
		</Events>
		
