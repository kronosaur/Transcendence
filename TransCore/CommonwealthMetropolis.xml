		<!-- Configuration -->
		
		<Devices>
			<Device deviceID="&itTeV9Blaster;"	omnidirectional="true" posAngle="39"  posRadius="215"	posZ="0"/>
			<Device deviceID="&itTeV9Blaster;"	omnidirectional="true" posAngle="90"  posRadius="215"	posZ="0"/>
