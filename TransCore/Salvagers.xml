<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

<!-- Salvagers ============================================================ -->

	<Sovereign UNID="&svSalvagers;"
			name=":the Salvagers"
			shortName=": Salvagers"
			adjective="Salvager"
			demonym=":a Salvager(s)"
			plural="true"

			alignment="neutral"
			/>

	<SystemMap unid="&smSalvagerSpace;"
			displayOn="&smHumanSpace;"
			>
