			<Effect type="thrustMain"		posAngle="159"	posRadius="52"	posZ="0"	rotation="180"	effect="&efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="-159"	posRadius="52"	posZ="0"	rotation="180"	effect="&efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="180"	posRadius="48"	posZ="7"	rotation="180"	effect="&efMainThrusterLarge;"/>
