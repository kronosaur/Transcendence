	<ShipClass UNID="&scRogueMineLayer;"
			manufacturer=		"Pacific Defense Corporation"
			class=				"Aurochs"
			type=				"mine layer"
			defaultSovereign=	"&svRogueFleet;"

			attributes=			"genericClass, rogueFleet"
			inherit=			"&baHumanTechShip;"

			explosionType=		"&vtBlastExplosion3;"
			leavesWreck=		"80"
			>

